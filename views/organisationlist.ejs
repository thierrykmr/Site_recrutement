    <script>$(document).ready(function() {
        $('#example').DataTable({
            dom: 'Plfrtip',
            searchPanes: {
                initCollapsed: true
            }
        });
    });</script>
  </head><body>
    <h1>
        <%= title %>
    </h1>
    Ma liste d'organisation
    <table border id="example" class="display nowrap" style="width:100%">
        <thead>
            <tr>
                <th>SIREN</th>
                <th>Name_company</th>
                <th>Siege-social</th>
                <th>Type_company</th>
                <th>Status</th>
                <th> Supprimer </th>
            </tr>
        </thead>
        <tbody>
            <% organisation.forEach((organisation)=> { %>
                <tr id="<%= organisation.siren %>"></tr>
                <tr>
                    <td>
                        <%= organisation.siren %>
                    </td>
                    <td>
                        <%= organisation.nom%>
                    </td>
                    <td>
                        <%= organisation.siege_social %>
                    </td>
                    <td>
                        <%= organisation.type %>
                    </td> 
                    <td>
                        <%= organisation.statut %>
                    </td>
                    <td>
                        <button onClick="fetch('/organisation/<%=organisation.siren%>', { method: 'DELETE' })
                        .then(() => { 
                                        let element = document.getElementById('<%= organisation.siren %>');
                                        element.parentNode.removeChild(element);  
                                        alert(' <%=organisation.siren%> est supprimÃ©');
                                    })"> supprimer </button>
                    </td>

                </tr>
                <% }) %>
        </tbody>
    </table>

</body>
</html>